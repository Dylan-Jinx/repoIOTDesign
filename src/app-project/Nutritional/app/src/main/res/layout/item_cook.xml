<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cook_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/cook_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cook_img"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="鸡蛋萨达萨达"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cook_material"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/cook_img"
                android:layout_marginTop="50dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/cook_flavour"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/cook_material"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/cook_nutritionalIngredient"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/cook_flavour"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingStart="10dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>