<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/company_staff_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/company_staff_transPortCompanyName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/company_staff_img"
                android:layout_marginTop="50dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="漳大" />

            <TextView
                android:id="@+id/company_staff_staffName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/company_staff_transPortCompanyName"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="wjx" />

            <TextView
                android:id="@+id/company_staff_telephone"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/company_staff_staffName"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:paddingStart="10dp"
                android:text="13855555555" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>