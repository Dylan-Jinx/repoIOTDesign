<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/bill_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/kaiti"
                android:maxLength="8"
                android:text="2020-07-20"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bill_cookHouseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_time"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="厨房"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bill_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_cookHouseName"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="温度:36"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bill_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_temperature"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="温度:36"
                android:textSize="20sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>