<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NutrientActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/nutrientSelectName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bk_color"
            android:fontFamily="@font/kaiti"
            android:paddingStart="20dp"
            android:lines="1"
            android:hint="请按营养成分的名称进行搜索"/>

        <Button
            android:id="@+id/nutritionBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bk_btn_color"
            android:fontFamily="@font/kaiti"
            android:gravity="center"
            android:text="搜索"
            android:textSize="16sp"  />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/nutritionFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>
</LinearLayout>