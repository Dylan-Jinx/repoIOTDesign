<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.StudentActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/student_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/student_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kaiti"
                android:text="学生基础信息"
                android:gravity="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_title"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="姓名：xxx"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/student_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_name"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="学号：xxx"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/student_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_no"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="地址：xxx"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/student_parentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_address"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="家长姓名：xxx"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/student_schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_parentName"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/kaiti"
                android:maxLines="1"
                android:text="学校名称：xxx"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>