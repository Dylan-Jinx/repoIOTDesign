<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductNumActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/product_num_id"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bk_color"
            android:fontFamily="@font/kaiti"
            android:paddingStart="20dp"
            android:hint="请按批次的ID进行搜索" />

        <Button
            android:id="@+id/product_num_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bk_btn_color"
            android:fontFamily="@font/kaiti"
            android:gravity="center"
            android:text="搜索"
            android:textSize="16sp" />
        <Button
            android:id="@+id/product_num_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bk_btn_add"
            android:fontFamily="@font/kaiti"
            android:text="添加"
            android:textSize="18sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/product_num_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>
</LinearLayout>