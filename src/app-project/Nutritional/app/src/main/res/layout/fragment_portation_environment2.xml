<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.environment.PortationEnvironmentFragment2">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/environment2_cardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/environment2_timer"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:maxLength="10"
                android:text="2020-07-09"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_plate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="蔬菜"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_productNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/environment2_plate"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_temperature"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/environment2_productNumber"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="23"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_humidity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/environment2_temperature"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="34"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_driver"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/environment2_humidity"
                android:layout_marginTop="50dp"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:text="驾驶司机：kk"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/environment2_telephone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/environment2_driver"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="3"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:text="联系电话：123"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>