<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/product_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/product_productinfo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/product_img"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:lines="3"
                android:text="蔬菜"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/product_productionbase"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/product_img"
                android:layout_marginTop="50dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="云霄东厦水稻种植基地"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/product_productnumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/product_productionbase"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:text="Jinx"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/product_warehouse"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/product_productnumber"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:paddingStart="10dp"
                android:text="13850526746"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>